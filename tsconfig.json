{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      // "target": "es5",
      "skipLibCheck": true,
      "module": "ESNext",
      "esModuleInterop": true,
      "target": "ESNext",
      // "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   },
   "include": [
      "./src/**/*.*",
      "src/swagger-output.json",
   ],
  "exclude": [
    "node_modules"
  ]
}